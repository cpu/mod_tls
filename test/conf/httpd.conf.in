Include "conf/modules.conf"

ErrorLogFormat "[%{cu}t] [%-m:%l] [pid %P:tid %T] %7F: %E: %M"
LogFormat "%h %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\" %k" combined
LogFormat "%h %l %u %t \"%r\" %>s %b" common
CustomLog "logs/access_log" combined

TypesConfig "@GEN_DIR@/apache/conf/mime.types"

ServerName localhost
ServerRoot "@GEN_DIR@/apache"
DocumentRoot "htdocs"

Listen @HTTP_PORT@
Listen @HTTPS_PORT@

<Location "/server-status">
    SetHandler server-status
</Location>

AddHandler cgi-script .py

<VirtualHost *:@HTTP_PORT@>
    ServerName localhost
    DocumentRoot "htdocs"
</VirtualHost>

<VirtualHost *:@HTTP_PORT@>
    ServerName a.mod-tls.test
    DocumentRoot "htdocs/a.mod-tls.test"
</VirtualHost>

<VirtualHost *:@HTTP_PORT@>
    ServerName b.mod-tls.test
    DocumentRoot "htdocs/b.mod-tls.test"
</VirtualHost>

<Directory "@GEN_DIR@/apache/htdocs/a.mod-tls.test">
    AllowOverride None
    Require all granted

    AddHandler cgi-script .py
    Options +ExecCGI
</Directory>

<Directory "@GEN_DIR@/apache/htdocs/b.mod-tls.test">
    AllowOverride None
    Require all granted

    AddHandler cgi-script .py
    Options +ExecCGI
</Directory>

Include "conf/test.conf"
